{
  "private": true,
  "name": "tacoscript-monorepo",
  "devDependencies": {
    "babel": "~5.8.23",
    "babel-eslint": "^4.1.3",
    "babel-runtime": "^5.8.25",
    "babylon": "^5.8.23",
    "browserify": "^11.2.0",
    "chai": "^3.3.0",
    "es5-shim": "^4.1.14",
    "eslint": "^1.6.0",
    "lodash": "^3.10.1",
    "mocha": "^2.3.3",
    "mocha-fixtures-generic": "^2.2.0",
    "output-file-sync": "^1.1.1",
    "path-exists": "^2.0.0",
    "rimraf": "^2.4.3",
    "semver": "^5.0.3",
    "shelljs": "^0.5.3",
    "source-map-support": "^0.3.2",
    "uglify-js": "^2.4.24",
    "yargs": "^3.27.0"
  },
  "potatoDependencies": {
    "gulp": "^3.9.0",
    "gulp-babel": "^5.3.0",
    "gulp-changed": "^1.3.0",
    "gulp-plumber": "^1.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-size": "^2.0.0",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-watch": "^4.3.5"
  },
  "scripts": {
    "build": "npm run clean && ./scripts/build.sh",
    "watch": "npm run clean && ./scripts/build.sh --watch",
    "watch-dev": "npm run clean && gulp watch",
    "clean": "rm -rf packages/*/lib",
    "lint": "eslint packages/*/src",
    "test": "npm run lint && ./scripts/test.sh",
    "publish": "git pull --ff-only && npm run test && ./scripts/publish.sh && npm run clean",
    "bootstrap": "npm install && (cd babel && make bootstrap) && ./scripts/bootstrap.js && npm run build",
    "install-potato": "< package.json jq -r '.potatoDependencies | to_entries[] | .key + \"@\" + .value' | xargs npm i"
  },
  "babel": {
    "stage": 0,
    "loose": [
      "all"
    ],
    "blacklist": [
      "es6.tailCall"
    ],
    "optional": [
      "optimisation.flow.forOf",
      "bluebirdCoroutines",
      "runtime"
    ],
    "env": {
      "test": {
        "auxiliaryCommentBefore": "istanbul ignore next"
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "rules": {
      "camelcase": 0,
      "comma-dangle": 0,
      "consistent-return": 0,
      "curly": 0,
      "key-spacing": 0,
      "new-cap": 0,
      "new-parens": 0,
      "no-cond-assign": 0,
      "no-console": 0,
      "no-constant-condition": 0,
      "no-empty": 0,
      "no-fallthrough": 0,
      "no-labels": 0,
      "no-loop-func": 0,
      "no-multi-spaces": 0,
      "no-process-exit": 0,
      "no-return-assign": 0,
      "no-shadow": 0,
      "no-underscore-dangle": 0,
      "no-unreachable": 0,
      "no-use-before-define": 0,
      "no-unused-vars": 1,
      "strict": 0
    },
    "//rules": {
      "quotes": [
        2,
        "double",
        "avoid-escape"
      ]
    },
    "env": {
      "node": true
    }
  },
  "dependencies": {}
}
